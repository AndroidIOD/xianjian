<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical" >

    <include layout="@layout/findpasswordtitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_findyanzhengma"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/shape_yanzhengma"
            android:gravity="center"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btn_resendbtn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_resendbutton"
            android:gravity="center"
            android:text="重新发送"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="验证码已发送至："
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_sendedphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_nextbtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_savebutton"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:text="注册即同意用户隐私保护协议"
        android:textColor="#00AAFF" />

</LinearLayout>