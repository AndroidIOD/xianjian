<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp" >

    <!-- 话题列表中上满的四个按钮中的第一个八卦item -->
    <!-- <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"      
        /> -->
    <ImageView
        android:id="@+id/iv_topiccategory_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:padding="1dp"
        
        android:scaleType="fitXY"
        android:src="@drawable/home_press" />

    <TextView
        android:id="@+id/tv_topiccategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_topiccategory_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="用户名"
        android:textColor="#000"
        android:textSize="15sp" />
    <ImageView 
        android:id="@+id/iv_pinglun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        android:layout_alignParentRight="true"
       android:src="@drawable/huifu" />
    <TextView 
        android:id="@+id/tv_huifunumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tv_pinglun"
        android:text="12"
        android:textSize="18px"
        />
       

    <TextView
        android:id="@+id/tv_topiccategory_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_topiccategory_pic"
        android:layout_below="@+id/tv_topiccategory_title"
        android:ellipsize="end"
       
        android:maxLines="1"
        android:text="登录的时间"
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_topiccategory_topicnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_topiccategory_pic"
        android:layout_alignBottom="@+id/iv_topiccategory_pic"
        android:layout_alignLeft="@+id/tv_topiccategory_content"
        android:text="标题........."
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

</RelativeLayout>
<TextView 
    android:id="@+id/tv_biaoti"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="标题。。。"
    />
<TextView 
    android:id="@+id/tv_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:layout_marginTop="3dp"
     android:ellipsize="end"
     android:lines="2"
    android:textSize="14px"
    android:textColor="@color/gray"
    android:text="刘永杰大哥哥奥熬熬啊奥嗷嗷嗷啊熬熬啊奥嗷嗷嗷啊熬熬啊奥嗷嗷嗷啊熬熬啊奥嗷嗷嗷啊熬熬啊奥嗷嗷嗷啊熬熬啊奥嗷嗷嗷啊熬熬啊奥嗷嗷嗷啊熬熬啊奥嗷嗷嗷啊熬熬啊奥嗷嗷嗷啊熬啊 哦哦啊啊阿布爱你"
    />
</LinearLayout>