<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <!-- 帖子分类的item -->

    <ImageView
        android:id="@+id/iv_topiccategory_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_press" />

    <TextView
        android:id="@+id/tv_topiccategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_topiccategory_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="仙剑奇侠传"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_topiccategory_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_topiccategory_pic"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="二十周年.献礼之作，二零一五年七月八日，不见不散"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_topiccategory_topicnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_topiccategory_pic"
        android:layout_alignLeft="@+id/tv_topiccategory_content"
        android:text="话题：999999999"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

</RelativeLayout>