<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="10dp"
    android:background="@drawable/ht_bg">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="1dp"
        android:src="@drawable/home_press" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_pic"
        android:maxLines="2"
        android:text="二十周年.献礼之作，二零一五年七月八日，不见不散"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_topicnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_pic"
        android:layout_alignLeft="@id/tv_title"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" 
        android:text="话题：999999999"/>
    
    <ImageButton  android:id="@+id/iv_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       android:src="@drawable/home_press"/>

</RelativeLayout>