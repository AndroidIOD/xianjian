<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/black" >

        <ImageButton
            android:id="@+id/ib_commentdetails_arrows_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/arrows_left" />

        <TextView
            android:id="@+id/tv__commentdetailst_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="3楼"
            android:textColor="#fff"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp" >

        <ImageView
            android:id="@+id/iv_commentdetails_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/home_press" />

        <ImageButton
            android:id="@+id/tv_commentdetails_commentnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/btn_more_selector" />

        <TextView
            android:id="@+id/tv_commentdetails_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/iv_commentdetails_user"
            android:padding="2dp"
            android:text="用户名" />

        <TextView
            android:id="@+id/tv_commentdetails_commenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_commentdetails_username"
            android:layout_toRightOf="@+id/tv_commentdetails_username"
            android:text="05-04"
            android:textColor="#77000000" />

        <ImageView
            android:id="@+id/iv_commentdetails_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_commentdetails_commentnumber"
            android:layout_toRightOf="@+id/tv_commentdetails_username"
            android:src="@drawable/boy" />

        <ImageView
            android:id="@+id/iv_commentdetails_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_commentdetails_commenttime"
            android:layout_alignTop="@+id/iv_commentdetails_gender"
            android:src="@drawable/boy" />

        <TextView
            android:id="@+id/tv_commentdetails_floornumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_commentdetails_username"
            android:layout_below="@+id/iv_commentdetails_gender"
            android:text="1楼"
            android:textColor="#77000000" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="59dp"
            android:textColor="#00f"
            android:text="用户名" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="评论内容" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/textView5"
            android:text="时间" />

    </RelativeLayout>

</LinearLayout>